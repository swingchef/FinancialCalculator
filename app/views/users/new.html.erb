<div class="container">
  <h1>New User</h1>
  <div class="row">
    <div class="span6 offset3">
  		<% if @user.errors.full_messages.any? %>
  			<% @user.errors.full_messages.each do |error_message| %>
  				<%= error_message %> <br />
  			<% end %>
  		<% end %>
      <%= form_for(@user, :url => create_user_url) do |u| %>
        <div class="row">
          <%= u.label :name, class: "col-sm-4"%>
          <%= u.text_field :name, class: "col-sm-3" %>
        </div>
        <div class="row">
          <%= u.label :email, class: "col-sm-4"  %>
          <%= u.text_field :email, class: "col-sm-3"  %>
        </div>

        <div class="row">
          <%= u.label :password, class: "col-sm-4"  %>
          <%= u.password_field :password, class: "col-sm-3"  %>
        </div>

        <div class="row">
          <%= u.label :password_confirmation, class: "col-sm-4"  %>
          <%= u.password_field :password_confirmation, class: "col-sm-3"  %>
        </div>

        <%= u.submit "Sign up", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>